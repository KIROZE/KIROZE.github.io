<!DOCTYPE html>
<html>
<head>
    <%- include('./include/head', { siteTitle: themeConfig.siteName }) %>
</head>
<body>
    <div class="wrapper">
        <%- include('./include/header') %>
        <div class="main">
            <div class="container">
                <div class="post-wrap archive">
                    <% let years = []; posts.forEach((item) => { const year = item.date.substring(0, 4); if (!years.includes(year)) { years.push(year); } }); %>
                    <% years.forEach(function(year) { %>
                    <h3>
                        <%- year %>
                    </h3>
                    <% posts.forEach(function(post) { %>
                    <%if (post.date.indexOf(year) !== -1) { %>

                    <article class="archive-item">
                        <a class="archive-item-link" href="<%- post.link %>">
                            <%= post.title %>
                        </a>
                        <span class="archive-item-date"><%= post.dateFormat %> </span>
                    </article>
                    <% } %>
                    <% }) %>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
    <%- include('./include/footer') %>
    </div>
</body>
</html>